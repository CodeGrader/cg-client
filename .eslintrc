{
  "extends": "airbnb-base",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": ["react"],
  "parser": "babel-eslint",
  "rules": {
    "max-len": [1, 120, 2, { "ignoreComments": true }],
    "no-cond-assign": [2, "except-parens"],
    "radix": 0,
    "space-infix-ops": 0,
    "no-unused-vars": [1, { "vars": "local", "args": "none", "varsIgnorePattern": "React" }],
    "no-param-reassign": 0,
    "react/jsx-uses-vars": [2],
    "class-methods-use-this": 0,
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
  }
}
